# jekyll config for pinktrace home page

# Configuration
markdown: maruku
permalink: "/:year/:month/:day/:title"
pygments: true
lsi: false
exclude: [ api, Makefile, Makefile.am, Makefile.in, css/screen.css.in ]

# Custom variables
author: "Ali Polatel"
mail: "alip@exherbo.org"
uri: "http://alip.github.com/pinktrace/"
