# jekyll config for PinkTrace home page

# Configuration
markdown: maruku
permalink: "/:year/:month/:day/:title"
pygments: true
lsi: false
exclude: [ api, Makefile, Makefile.am, Makefile.in, css/screen.css.in ]

# Custom variables
author: "Ali Polatel"
mail: "alip@exherbo.org"

# Let autoconf fill the rest in
version: "@VERSION@"
title: "@PACKAGE@-@VERSION@"
uri: "@SITE_URI_HOME@"
uri_scm: "@SITE_URI_SCM@"
uri_scm_view: "@SITE_URI_SCM_VIEW@"
uri_support: "@SITE_URI_SUPPORT@"
